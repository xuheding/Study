<Window x:Class="_10_CheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_CheckBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grid1">
        <!--IsChecked表示勾选地状态  IsThreeState表示可以有3种状态  勾选：True 中间状态：Null 不勾选：False-->
        <CheckBox Name="ChkSport" Content="体育" IsChecked="False" IsThreeState="True"
                  HorizontalAlignment="Left" Height="34" Margin="78,162,0,0" VerticalAlignment="Top" Width="179"/>
        <CheckBox Content="唱歌" IsChecked="False" IsThreeState="True"
            HorizontalAlignment="Left" Height="34" Margin="301,162,0,0" VerticalAlignment="Top" Width="179"/>
        <CheckBox Content="跳舞" IsChecked="False" IsThreeState="True"
            HorizontalAlignment="Left" Height="34" Margin="534,162,0,0" VerticalAlignment="Top" Width="179"/>
        <Button Content="获取" HorizontalAlignment="Left" Margin="146,246,0,0" VerticalAlignment="Top" Width="132" Height="44" Click="Button_Click"/>
        <Button Name="Btn" Content="获取2" HorizontalAlignment="Left" Height="45" Margin="429,245,0,0" VerticalAlignment="Top" Width="126" Click="Btn_Click"/>


    </Grid>
</Window>
